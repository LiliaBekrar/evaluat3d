<h1>VOTRE MOBILIER</h1>
<h2> <%= " Ajouter le mobilier de #{@room.name.capitalize}" %></h2>


<%= simple_form_for :stuffscreation, method: :post, url: create_stuffs_move_room_path do |f| %>
  <% @stuffs.each do |stuff|%>
    <div class="form-inputs">
      <%= f.label stuff.name %>
      <%= f.input stuff.name.to_sym, input_html: { value: 0, type: 'number' }, label: false %>
    </div>
  <%end %>
    <div class="form-actions">
    <p>Vous avez fini de saisir votre mobilier ?</p>
      <%= f.button :submit, 'Calculez votre volume'%>
    </div>
<% end %>

<p> Continuez à saisir le mobilier des autres pièces</p>
<%= link_to 'back', rooms_list_move_path(@room.move) %>
