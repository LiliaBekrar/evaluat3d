<div class="container-image-centered">
  <%= image_tag("Background_top.svg", :class => "background-top")%>
</div>

<div class="text-pages-top">
    <h2 class="title-white"><small>VOLUME TOTAL</small></h2>
    <% if @volume_total == "" %>
    <h1 class="title-white text-volume-size">O M3</h1>
    <% else %>
    <h1 class="title-white text-volume-size"><%= "#{@volume_total}M3" %></h1>
    <% end %>
</div>

<div class="my-layout-container">


  <div class="front-content container-secondaire">

      <p>DETAIL DU VOLUME PAR PIECE</p>


      <%@recap.each do |key, value|%>
      <div class="container-materiels">
        <div class="items-materiels py-2 label-materiels"><span><%= key.upcase %></span></div>
        <div><span class="items-materiels py-2 qty-materiels"><%= "#{value} m3" %> </span></div>
      </div>
      <% end  %>


    <div class="d-flex justify-content-around">
    <%= link_to details_move_path, class: 'btn btn-secondary done card-room w-50 x-1' do %>
      <span class="small">à partir de</span><br>
      <span class="h4"><%="#{@prix_perso} € " %></span><br>
      <span class="strong">SEUL</span>
    <% end %>

    <%= link_to find_mover_move_path, class: 'btn btn-secondary pro card-room w-50 mx-1' do %>
      <span class="small">prix indicatif</span><br>
      <span class="h4"><%="#{@prix_pro} € " %></span><br>
      <span class="strong">PRO</span>
    <% end %>
    </div>
  </div>
</div>
