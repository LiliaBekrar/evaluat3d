
<div class="container-image-centered">
  <%= image_tag("Background_top.svg", :class => "background-top")%>
</div>

<div class="text-pages-top">
    <h2 class="title-white"><small>VOLUME TOTAL</small></h2>
    <h1 class="title-white text-volume-size"><%= "#{@volume_total}M3" %></h1>
</div>

<div class="my-layout-container">


  <div class="front-content card-form">

    <p>DETAIL DU VOLUME PAR PIECE</p>
    <%@recap.each do |key, value|%>
      <%= "#{key.upcase} -> #{value} m3"%>
      <br>
    <% end %>

    <br>

    <div class="d-flex justify-content-around">
    <%= link_to details_move_path, class: 'btn btn-secondary done card-room w-50 mx-1' do %>
      <span class="small">à partir de</span>
      <span class="h4"><%="#{@prix_perso} € " %></span>
      <span class="small">SEUL</span>
    <% end %>

    <%= link_to find_mover_move_path, class: 'btn btn-secondary card-room w-50 mx-1' do %>
      <span class="small">prix indicatif</span>
      <span class="h4"><%="#{@prix_pro} € " %></span>
      <span class="small">PRO</span>
    <% end %>
    </div>

    <%# <%= link_to 'back', moves_path  %>

  </div>
</div>
