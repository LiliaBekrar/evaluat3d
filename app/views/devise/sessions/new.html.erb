<div class="container-image-centered">
  <%= image_tag("Background_full.svg", :class => "full-background")%>

  <div class="text-demenagements-top">
      <h2 class="title-white">SE CONNECTER</h2>
  </div>
</div>

<div class="my-layout-container">
  <div class="front-content text-center">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-inputs" style="text-align: left;">

        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, :label_html => {:class => "my-label-form"} %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }, :label_html => {:class => "my-label-form"} %>

        <%= f.input :remember_me, :label_html => {:class => "my-label-form"}, as: :boolean if devise_mapping.rememberable? %>
    </div>

      <div class="form-actions">
        <%= f.button :submit, "CONNEXION", class: "btn btn-login" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
